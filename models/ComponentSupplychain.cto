namespace org.example.compnetwork

/*
 * Concepts
 */

concept ComponentProperties {
    o String brand
    o String model
    o Double horsePower
    o Double cubicCapacity
    o Integer cylindersAmount
}

concept Address {
    o String country
    o String city
    o String street
    o String streetNo
}

/*
 * Assets
 */

asset Component identified by componentId {
    o String componentId
    o ComponentProperties data

    --> Manufacturer manufacturer
    --> Car currentCar optional
    --> Merchant merchant optional
}

asset Car identified by carId {
    o String carId
    o String legalDocumentId
}

/*
 * Participants
 */

participant Member identified by memberId {
  o String memberId
  o String name
  o Address address optional
}

participant Manufacturer extends Member {
}

participant Merchant extends Member {
}

/*
 * Transactions
 */

transaction ComponentMerchantTransfer {
 	  --> Component component
    --> Merchant merchant
}

transaction ComponentCarInstallation {
    --> Component component
    --> Car car
}

transaction ComponentCreation {
    --> Manufacturer manufacturer
    o ComponentProperties data
}

transaction CarCreation {
    o String legalIdDocument
}

